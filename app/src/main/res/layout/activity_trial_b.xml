<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/todo"
        android:scaleType="fitXY"
        android:src="@drawable/subscription_bg_b"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YOUR TRIAL FREE"
            android:textColor="@color/black"
            android:fontFamily="@font/akrobat_black"
            android:textSize="40sp"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="END'S IN"
                android:textColor="@color/black"
                android:fontFamily="@font/akrobat_black"
                android:textSize="40sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/textView_trial_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:text="13 DAY'S"
                android:textColor="@color/white"
                android:fontFamily="@font/akrobat_black"
                android:textSize="40sp"
                android:background="@drawable/bg_rounded_pink"
                android:textAlignment="center"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_edit_profile_selector"
            android:text="Continue"
            android:textAllCaps="false"
            android:textSize="@dimen/font_button_normal"
            android:textColor="@color/white"
            android:id="@+id/trail_continue_btn"/>


    </LinearLayout>

</RelativeLayout>
